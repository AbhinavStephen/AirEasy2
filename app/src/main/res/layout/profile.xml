<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".profile">

    <include layout="@layout/tolbarprofile" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:clipToPadding="false">

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profileicon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/addbutton" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7sp"
                android:layout_marginTop="23.3dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:gravity="center"
                android:text="Name "
                android:textColor="@color/txt_color"
                android:textSize="13.3sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nam"
                android:layout_marginLeft="16.7dp"
                android:layout_marginTop="6.7dp"
                android:layout_marginRight="16.7sp"
                android:background="@drawable/rect_gray_border"
                android:fontFamily="@font/sf_pro_text_regular"
                android:hint="Vikram"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/txt_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7sp"
                android:layout_marginTop="23.3dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:gravity="center"
                android:text="Email "
                android:textColor="@color/txt_color"
                android:textSize="13.3sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/em"
                android:layout_marginLeft="16.7dp"
                android:layout_marginTop="6.7dp"
                android:layout_marginRight="16.7sp"
                android:background="@drawable/rect_gray_border"
                android:fontFamily="@font/sf_pro_text_regular"
                android:hint="Vikram.19@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/txt_color"
                android:textSize="15sp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7sp"
                android:layout_marginTop="23.3dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:gravity="center"
                android:text="Phone "
                android:textColor="@color/txt_color"
                android:textSize="13.3sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phno"
                android:layout_marginLeft="16.7dp"
                android:layout_marginTop="6.7dp"
                android:layout_marginRight="16.7sp"
                android:background="@drawable/rect_gray_border"
                android:fontFamily="@font/sf_pro_text_regular"
                android:hint="9129371123"
                android:inputType="number"
                android:maxLength="10"
                android:paddingLeft="15dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/txt_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7sp"
                android:layout_marginTop="23.3dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:gravity="center"
                android:text="Passport No."
                android:textColor="@color/txt_color"
                android:textSize="13.3sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passno"
                android:layout_marginLeft="16.7dp"
                android:layout_marginTop="6.7dp"
                android:layout_marginRight="16.7sp"
                android:background="@drawable/rect_gray_border"
                android:fontFamily="@font/sf_pro_text_regular"
                android:hint="V2558928"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/txt_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7sp"
                android:layout_marginTop="23.3dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:gravity="center"
                android:text="City "
                android:textColor="@color/txt_color"
                android:textSize="13.3sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/place"
                android:layout_marginLeft="16.7dp"
                android:layout_marginTop="6.7dp"
                android:layout_marginRight="16.7sp"
                android:background="@drawable/rect_gray_border"
                android:fontFamily="@font/sf_pro_text_regular"
                android:hint="Vadodara"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/txt_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7sp"
                android:layout_marginTop="23.3dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:gravity="center"
                android:text="State "
                android:textColor="@color/txt_color"
                android:textSize="13.3sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/state"
                android:layout_marginLeft="16.7dp"
                android:layout_marginTop="6.7dp"
                android:layout_marginRight="16.7sp"
                android:background="@drawable/rect_gray_border"
                android:fontFamily="@font/sf_pro_text_regular"
                android:hint="Gujarat"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/txt_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7sp"
                android:layout_marginTop="23.3dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:gravity="center"
                android:text="Country "
                android:textColor="@color/txt_color"
                android:textSize="13.3sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nation"
                android:layout_marginLeft="16.7dp"
                android:layout_marginTop="6.7dp"
                android:layout_marginRight="16.7sp"
                android:background="@drawable/rect_gray_border"
                android:fontFamily="@font/sf_pro_text_regular"
                android:hint="India"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/txt_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7sp"
                android:layout_marginTop="23.3dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:gravity="center"
                android:text="Zip Code "
                android:textColor="@color/txt_color"
                android:textSize="13.3sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/zip"
                android:layout_marginLeft="16.7dp"
                android:layout_marginTop="6.7dp"
                android:layout_marginRight="16.7sp"
                android:background="@drawable/rect_gray_border"
                android:fontFamily="@font/sf_pro_text_regular"
                android:hint="391231"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/txt_color"
                android:textSize="15sp" />

            <Button
                android:id="@+id/logout"
                android:layout_width="116dp"
                android:layout_height="49dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/loding"
                android:fontFamily="@font/sf_pro_text_medium"
                android:text="Log out"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="20dp" />

            <Button
                android:layout_width="180dp"
                android:layout_height="49dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="-50dp"
                android:background="@drawable/changepass"
                android:backgroundTint="@color/white"
                android:text="Change Email Or Password"
                android:textAllCaps="false"
android:id="@+id/change"
                android:textColor="@color/orange"
                android:textSize="14dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>