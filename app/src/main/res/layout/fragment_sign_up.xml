<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadeapp"
    >

    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/img_1" />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/inder"
        android:gravity="center_horizontal|top"
        android:text="@string/sign_up"
        android:textColor="#00A7A7"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@id/sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/img41" />

    <TextView
        android:id="@+id/login"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="30dp"
        android:gravity="right|top"
        android:text="@string/login"
        android:textColor="#3489DE"
        android:textSize="25dp" />
    <EditText
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/styles"
        android:layout_below="@id/img"
        android:layout_marginTop="30dp"
        android:hint="Name"
        android:id="@+id/name"
        android:paddingLeft="20dp"
        android:textColorHint="@color/black"
        android:inputType="text"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/styles"
        android:hint="Email"
        android:textColorHint="@color/black"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/styles"
        android:hint="Password"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:paddingLeft="20dp" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox"
        android:layout_below="@id/password"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:id="@+id/i_would_lik"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:layout_below="@id/password"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="30dp"
        android:text="@string/i_would_lik"
        android:textColor="#A19E9E"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/signbutton"
        android:layout_width="343dp"
        android:layout_height="51dp"
        android:layout_below="@id/i_would_lik"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttons"
        android:text="@string/sign_up" />

    <TextView
        android:id="@+id/forgot_your"
        android:layout_width="178dp"
        android:layout_height="19dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signbutton"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#3489DE"
        android:text="@string/forgot_your"
        />

    <com.cuberto.liquid_swipe.LiquidPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />








</RelativeLayout>